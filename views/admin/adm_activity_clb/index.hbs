<div class="container-fluid" ng-controller="ActivityClbController">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách bài viết</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-title">
                <a href="/admin/activity-clb/add" class="btn btn-success" >
                    Thêm mới
                </a>
                <button type="button" class="btn btn-primary">Tải lại</button>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Danh mục</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in posts">
                            <td ng-bind="item.title"></td>
                            <td ng-bind="item.category_name"></td>
                            <td ng-bind="item.created_date | formatDateToDMY"></td>
                            <td ng-bind="item.status | filterStatusToText"></td>
                            <td>
                                <div class="btn-group  btn-group-sm" role="group">
                                    <button type="button" class="btn" ng-click="info(item.id)" >
                                        <i class="fas fa-pen-alt"></i>
                                    </button>
                                    <button type="button" class="btn" ng-click="deletePost(item.id)">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div class="pagination-wr mt-1">
                    <nav aria-label="navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" ng-click="prevPage()" href="javascript:;" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item" 
                                ng-repeat="page in pagination.pages"
                                ng-class="{active:pagination.page === page}">
                                <a class="page-link" ng-click="setPage(page)" href="javascript:;" ng-bind="page" >1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" ng-click="nextPage()" href="javascript:;" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>