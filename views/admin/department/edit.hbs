<div class="container-fluid" ng-controller="EditDepartmentController" data-ng-init="infoDepartment = {{data}}; getInfo()">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Chi tiết ban ngành </h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-title ">
                <div class="flex flex-end">
                    <button type="button" class="btn btn-success mr-1" ng-click="update(f_UpdateCategory)">
                        Lưu
                    </button>
                    <a href="/admin/post" class="btn btn-primary">Danh sách</a>
                </div>
            </div>
            <form name="f_UpdateCategory" ng-validate="validator">
                <div class="form-group">
                    <label>Tên danh mục bài viết <span class="required">(*)</span> </label>
                   <input type="text" name="name" ng-model="formUpdate.name" class="form-control">
                    {{!-- <input type="text" name="category_post" class="form-control"> --}}
                </div>
                <div class="form-group">
                    <label>Tiêu đề <span class="required">(*)</span> </label>
                    <textarea name="title" ng-model="formUpdate.title" id="title" rows="2" placeholder="..." class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Nội dung <span class="required">(*)</span> </label>
                    <textarea name="content" id="content_department" rows="2" placeholder="Nội dung"
                        class="form-control"></textarea>
                </div>
            </form>
        </div>
    </div>

    <!-- modal -->

    {{> admin/posts/modal}}
</div>