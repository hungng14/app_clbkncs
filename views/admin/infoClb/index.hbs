<div class="container-fluid" ng-controller="InfoClubController">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý Thông tin câu lạc bộ</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-title ">
                <div class="flex flex-end">
                    <button type="button" class="btn btn-success mr-1" ng-click="update(f_UpdatePost)">
                        Lưu
                    </button>
                </div>
            </div>
            <form name="f_InfoClub">
                <div class="form-group">
                    <label>Khẩu hiệu <span class="required">(*)</span> </label>
                    <textarea name="title" ng-model="formUpdatePost.title" id="title" rows="2" placeholder="..."
                        class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Người đứng đầu <span class="required">(*)</span> </label>
                    <div class="input-group mb-2">
                        <select name="category_post" ng-model="formUpdatePost.category_post_id"
                            ng-options="category.id as category.category_name for category in categoryPosts"
                            name="category_post" placeholder="Danh mục" class="form-control">
                            <option value="" ng-if="hideOptions"></option>
                        </select>
                        <div class="input-group-prepend">
                            <button type="button" data-target="#create_category" data-toggle="modal"
                                class="btn btn-success bd-rd-tr bd-rd-br">Thêm mới</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Địa chỉ <span class="required">(*)</span> </label>
                    <input type="text" name="address" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email <span class="required">(*)</span> </label>
                    <input type="email" name="email" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label>Số điện thoại <span class="required">(*)</span></label>
                    <input type="text" name="phone" class="form-control">
                </div>
                <div class="form-group">
                    <label>Giờ làm việc</label>
                    <div class="row col-md-12">
                        <div class="col-md-6 row">
                            <label class="col-md-2">Bắt đầu </label>
                            <div class="col-md-8">
                                <div class="input-group date date-picker" data-date-format="dd-mm-yyyy"
                                    data-date-viewmode="years" data-date-today-highlight="true">
                                    <input type="text" class="form-control dashed-border"
                                        ng-model="formUpdateAccount.birthday" placeholder="Giờ bắt đầu" name="birthday">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="far fa-calendar-alt font-blue"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 row">
                            <label class="col-md-2">Kết thúc </label>
                            <div class="col-md-8">
                                <div class="input-group date date-picker" data-date-format="dd-mm-yyyy"
                                    data-date-viewmode="years" data-date-today-highlight="true">
                                    <input type="text" class="form-control dashed-border"
                                        ng-model="formUpdateAccount.birthday" placeholder="Giờ kết thúc"
                                        name="birthday">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="far fa-calendar-alt font-blue"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label> Phạm vi hoạt động </label>
                    <textarea name="title" ng-model="formUpdatePost.title" id="title" rows="2" placeholder="..."
                        class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label> Ảnh đại diện <span class="required">(*)</span> </label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    </div>
                </div>
                <div class="form-group">
                    <label> Logo <span class="required">(*)</span> </label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="validatedCustomFile" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {{> admin/user/modal}}
    <!-- modal -->

</div>