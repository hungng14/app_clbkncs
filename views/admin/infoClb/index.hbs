<div class="container-fluid" ng-controller="InfoClubController">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý Thông tin câu lạc bộ</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-title ">
                <div class="flex flex-end">
                    <button type="button" class="btn btn-success mr-1" ng-click="update(f_UpdatePost)">
                        Lưu
                    </button>
                </div>
            </div>
            <form name="f_InfoClub" ng-validate="validator">
                <div class="form-group">
                    <label>Khẩu hiệu <span class="required">(*)</span> </label>
                    <textarea name="title" ng-model="formInfoClub.slogan" id="slogan" rows="2" placeholder="..."
                        class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Người đứng đầu <span class="required">(*)</span> </label>
                    <div class="input-group mb-2">
                        <select name="user" ng-model="formInfoClub.user_id"
                            ng-options="category.id as category.category_name for category in users" 
                             placeholder="Người đứng đầu" class="form-control">
                            <option value="" ng-if="hideOptions"></option>
                        </select>
                        <div class="input-group-prepend">
                            <button type="button" data-target="#create_category" data-toggle="modal"
                                class="btn btn-success bd-rd-tr bd-rd-br">Thêm mới</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>Địa chỉ <span class="required">(*)</span> </label>
                    <input type="text" ng-model="formInfoClub.address" name="address" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email <span class="required">(*)</span> </label>
                    <input type="email" ng-model="formInfoClub.email" name="email" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label>Số điện thoại <span class="required">(*)</span></label>
                    <input type="text" ng-model="formInfoClub.phone" name="phone" class="form-control">
                </div>
                <div class="form-group">
                    <label>Giờ làm việc</label>
                    <div class="row col-md-12">
                        <div class="col-md-6 row">
                            <label class="col-md-2">Bắt đầu </label>
                            <div class="col-md-8">
                                <div class="input-group date datetime-piclker" >
                                    <input type="text" class="form-control dashed-border "
                                        ng-model="formInfoClub.work_start_time" placeholder="Giờ bắt đầu"
                                        name="work_start_time">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="fas fa-clock"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 row">
                            <label class="col-md-2">Kết thúc </label>
                            <div class="col-md-8">
                                <div class="input-group date datetime-piclker" >
                                    <input type="text" class="form-control dashed-border "
                                        ng-model="formInfoClub.work_end_time" placeholder="Giờ kết thúc"
                                        name="work_end_time">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="fas fa-clock"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label> Phạm vi hoạt động </label>
                    <textarea name="title" ng-model="formInfoClub.scales"  id="scales" rows="2" placeholder="..."
                        class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label> Ảnh đại diện <span class="required">(*)</span> </label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="avatar" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    </div>
                </div>
                <div class="form-group">
                    <label> Logo <span class="required">(*)</span> </label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="logo" required>
                        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
                    </div>
                </div>
            </form>
        </div>
    </div>

    {{> admin/user/modal}}
    <!-- modal -->

</div>