<div class="container-fluid" ng-controller="InfoClubController">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản lý Thông tin câu lạc bộ</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="card-title ">
                <div class="flex flex-end">
                    <button type="button" class="btn btn-success mr-1" ng-click="update(f_InfoClub)">
                        Lưu
                    </button>
                </div>
            </div>
            <form name="f_InfoClub" ng-validate="validator">
                <div class="form-group">
                    <label>Khẩu hiệu <span class="required">(*)</span> </label>
                    <input type="text" class="form-control" name="slogan" ng-model="formInfoClub.slogan">
                </div>
                <div class="form-group">
                    <label>Người đứng đầu <span class="required">(*)</span> </label>
                    <div class="input-group mb-2">
                        <select ng-model="formInfoClub.user_id" name="member"
                            ng-options="member.id as member.name for member in members" 
                             placeholder="Người đứng đầu" class="form-control">
                            <option value="" ng-if="hideOptions"></option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label>Địa chỉ <span class="required">(*)</span> </label>
                    <input type="text" ng-model="formInfoClub.address" name="address" class="form-control">
                </div>
                <div class="form-group">
                    <label>Email <span class="required">(*)</span> </label>
                    <input type="email" ng-model="formInfoClub.email" name="email" id="" class="form-control">
                </div>
                <div class="form-group">
                    <label>Số điện thoại <span class="required">(*)</span></label>
                    <input type="text" ng-model="formInfoClub.phone" name="phone" class="form-control">
                </div>
                <div class="form-group">
                    <label>Giờ làm việc</label>
                    <div class="row col-md-12">
                        <div class="col-md-6 row">
                            <label class="col-md-2">Bắt đầu </label>
                            <div class="col-md-8">
                                <div class="input-group date datetime-piclker" id="start_time">
                                    <input type="text" class="form-control dashed-border "
                                        ng-model="formInfoClub.work_start_time" placeholder="Giờ bắt đầu"
                                        name="work_start_time">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="fas fa-clock"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 row">
                            <label class="col-md-2">Kết thúc </label>
                            <div class="col-md-8">
                                <div class="input-group date datetime-piclker" id="end_time">
                                    <input type="text" class="form-control dashed-border "
                                        ng-model="formInfoClub.work_end_time" placeholder="Giờ kết thúc"
                                        name="work_end_time">
                                    <div class="form-control-focus"> </div>
                                    <span class="input-group-addon"><i class="fas fa-clock"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label> Phạm vi hoạt động </label>
                    <textarea name="scales" ng-model="formInfoClub.scales"  id="scales" rows="2" placeholder="..."
                        class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label> Ảnh đại diện </label>
                    <div class="wrapper-file-input flex">
                        <input type="file" file-upload-model="avatar" class="custom-file-input" id="avatar">
                        <button class="btn btn-success btn-choose-file mr-5">Chọn ảnh</button>
                        <div class="image-wrapper-input avatar-profile">
                            <img src="/images/avatar.jpg" alt="" srcset="">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label> Logo </label>
                    <div class="wrapper-file-input flex">
                        <input type="file" file-upload-model="logo" class="custom-file-input" id="logo">
                        <button class="btn btn-success btn-choose-file mr-5">Chọn ảnh</button>
                        <div class="image-wrapper-input logo-profile">
                            <img src="/images/logo.jpg" alt="" srcset="">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>