<div class="tab-pane fade show active" id="member" role="tabpanel" aria-labelledby="home-tab">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="card-title">
                        <button type="button" class="btn btn-success" data-toggle="modal"
                            data-target="#create_user">Thêm
                            thành viên</button>
                        <button type="button" class="btn btn-primary">Tải lại</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Họ tên</th>
                                    <th>Vị trí</th>
                                    <th>Địa chỉ</th>
                                    <th>Số điện thoại</th>
                                    <th>Ngày thêm</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in users">
                                    <td ng-bind="item.name"></td>
                                    <td ng-bind="item.position | filterPosition"></td>
                                    <td ng-bind="item.address"></td>
                                    <td ng-bind="item.phone"></td>
                                    <td ng-bind="item.created_date | formatDateToDMY"></td>
                                    <td ng-bind="item.status | filterStatusToText"></td>
                                    <td>
                                        <div class="btn-group  btn-group-sm" role="group" aria-label="Basic example">
                                            <button type="button" class="btn" 
                                                data-target="#update_user" data-toggle="modal"
                                             ng-click="infoUser(item.id)">
                                                <i class="fas fa-pen-alt"></i>
                                            </button>
                                            <button type="button" class="btn" ng-click="deleteUser(item.id, item.name)">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>