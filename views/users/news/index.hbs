<div class="page-content" ng-controller="NewsController">
    <div class="divider mb-5"></div>
    <main class="container-fluid">
        <div class="ct-page">
            <div class="info-clb box">
                <div class="mb-title text-center">
                    <h3 class="font-weight-bold text-uppercase">
                        Tin tức
                    </h3>
                </div>
                <div class="i-content">
                    <div class="n-b p-4 mt-2 bd-1" ng-repeat="item in listnews">
                        <div class="ct-box ">
                            {{!-- <div class="img-wr-pro">
                                <a href="/news/detail?id=\{{item.id}}">
                                    <img ng-src="\{{item.avatar}}" alt="">
                                </a>
                            </div> --}}
                            <div class="ct-wr-in">
                                <div class="n-b-title text-uppercase mt-2">
                                    <span class="type-n">
                                        <a href="/news/detail?id=\{{item.id}}" ng-bind="item.category_name">
                                            Loại tin tức
                                        </a>
                                    </span>
                                    <span class="date-publised" ng-bind="item.created_date | formatDateToDMY"></span>
                                </div>
                                <div class="n-b-content">
                                    <a href="/news/detail?id=\{{item.id}}" ng-bind="item.title">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hr mt-2"></div>
                </div>
                <div class="pagination-wr mt-1">
                    <nav aria-label="navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" ng-click="prevPage()" href="javascript:;" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item" 
                                ng-repeat="page in pagination.pages"
                                ng-class="{active:pagination.page === page}">
                                <a class="page-link" ng-click="setPage(page)" href="javascript:;" ng-bind="page" >1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" ng-click="nextPage()" href="javascript:;" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <div class="divider mb-5"></div>
    </main>
    <div class="divider mb-5"></div>
</div>